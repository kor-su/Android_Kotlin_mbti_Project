<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/home_mbtiImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mbti"
        app:layout_constraintBottom_toBottomOf="@+id/home_mbti_test_btn"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/home_mbti_test_btn"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_mbtiImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="mbti 검사하기"
        android:fontFamily="@font/korta_hof_xml"
        android:background="@drawable/home_button"
        android:padding="5dp"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/home_mbti_present_btn"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_mbti_test_btn"
        app:layout_constraintBottom_toBottomOf="@id/home_mbti_information_btn"
        android:text="mbti 선물추천"
        android:fontFamily="@font/korta_hof_xml"
        android:background="@drawable/home_button"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/home_mbti_information_btn"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_mbti_present_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="mbti 정보"
        android:fontFamily="@font/korta_hof_xml"
        android:background="@drawable/home_button"
        android:textSize="25sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>